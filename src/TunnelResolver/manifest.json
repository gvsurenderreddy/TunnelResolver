{
  "manifest_version": 2,

  "name": "Tunnel Resolver",
  "description": "resolves ip addresses and ports to those you've tunneled and specified",
  "version": "1.0.0",
  "author": "Kirby Linvill",

  "browser_action": {
    "default_icon": "tunnel.png",
    "default_title": "Tunnel Resolver",
    "default_popup": "tunnels.html"
  },
  "background": {
    "persistent": false,
    "scripts": ["forward.js"]
  },

  "permissions": [
    "activeTab",
    "webNavigation",
    "tabs"
  ]
}